<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeeiee.mapper.MenuMapper">
    <!--@formatter:off-->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yeeiee.domain.entity.Menu">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="access_path" property="accessPath" />
        <result column="icon" property="icon" />
        <result column="pid" property="pid" />
        <result column="keep_alive" property="keepAlive" />
        <result column="menu_type" property="menuType" />
        <result column="sort_id" property="sortId" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, access_path, icon, pid, keep_alive, menu_type, sort_id, create_user, create_time, update_user, update_time
    </sql>

    <select id="selectMenusByRoleNames" resultType="com.yeeiee.domain.vo.MenuVo">
        select
            a.id,
            a.title,
            a.access_path as accessPath,
            a.icon,
            a.pid,
            a.keep_alive as keepAlive,
            a.menu_type as menuType,
            a.sort_id as sortId,
            a.create_user as createUser,
            a.create_time as createTime,
            a.update_user as updateUser,
            a.update_time as updateTime
        from t_menu a
        join (
            select
                b.menu_id
            from (
                select
                    id
                from t_role a
                where role_name in
                <foreach collection="roles" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            ) a
            join t_role_menu b
            on a.id = b.role_id
            group by b.menu_id
        ) b
        on a.id = b.menu_id
        order by a.sort_id,a.id
    </select>
</mapper>