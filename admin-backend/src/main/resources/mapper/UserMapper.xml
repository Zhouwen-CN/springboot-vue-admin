<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeeiee.mapper.UserMapper">
    <!--@formatter:off-->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yeeiee.domain.entity.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="token_version" property="tokenVersion"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectUserPages" resultType="com.yeeiee.domain.vo.UserVo">
        select /*+ UseLimitPushDown */
            id,
            username,
            create_time,
            update_time
        from t_user
        <where>
            <if test="searchName != null and searchName.trim() != ''">
                and username like concat('%',#{searchName},'%')
            </if>
        </where>
    </select>
</mapper>
