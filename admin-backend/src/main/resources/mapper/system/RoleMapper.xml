<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeeiee.system.mapper.RoleMapper">
    <!--@formatter:off-->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yeeiee.system.domain.entity.Role">
        <id column="id" property="id" />
        <result column="role_name" property="roleName" />
        <result column="description" property="description" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, role_name, description, create_user, create_time, update_user, update_time
    </sql>

    <select id="selectRoleSelectorVoListByUserId" resultType="com.yeeiee.system.domain.vo.RoleSelectorVo">
         select
            b.id,
            b.role_name as roleName
        from (
            select
                *
            from t_user_role
            where user_id = #{userId}
        ) a
        join t_role b
        on a.role_id = b.id
    </select>
</mapper>