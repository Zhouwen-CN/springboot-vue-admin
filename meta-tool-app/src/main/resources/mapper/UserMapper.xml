<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeeiee.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="UserDto" type="com.yeeiee.entity.dto.UserRoleDto">
        <id column="u_id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <collection property="roles" ofType="com.yeeiee.entity.Role">
            <id column="r_id" property="id"/>
            <result column="role_name" property="roleName"/>
            <result column="create_time" property="createTime"/>
            <result column="update_time" property="updateTime"/>
        </collection>
    </resultMap>

    <resultMap id="UserRoleVo" type="com.yeeiee.entity.vo.UserRoleVo">
        <id column="u_id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="role_ids" property="roleIds"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>


    <select id="selectByUserName" resultMap="UserDto">
        select a.id as u_id,
               a.username,
               a.`password`,
               c.id as r_id,
               c.role_name
        from (select id,
                     username,
                     password
              from t_user
              where username = #{username}) a
                 left join t_user_role b
                           on a.id = b.user_id
                 left join t_role c
                           on b.role_id = c.id
    </select>

    <select id="selectUserPages" resultMap="UserRoleVo">
        select a.id as u_id,
        a.username,
        a.password,
        a.create_time,
        a.update_time,
        group_concat(b.role_id) as role_ids
        from (
        select
        *
        from t_user
        <if test="searchName != null and searchName.trim() != ''">
            where username like concat('%',#{searchName},'%')
        </if>
        ) a
        left join t_user_role b
        on a.id = b.user_id
        group by a.id, a.username, a.password, a.create_time, a.update_time
    </select>

</mapper>
