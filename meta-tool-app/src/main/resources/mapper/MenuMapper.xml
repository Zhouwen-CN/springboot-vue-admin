<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeeiee.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yeeiee.entity.dto.MenuDto">
        <id column="id" property="id"/>
        <result column="pid" property="pid"/>
        <result column="title" property="title"/>
        <result column="access_path" property="accessPath"/>
        <result column="file_path" property="filePath"/>
        <result column="icon" property="icon"/>
        <result column="update_time" property="updateTime"/>
        <collection property="children" ofType="com.yeeiee.entity.dto.MenuDto"
                    column="id" select="com.yeeiee.mapper.MenuMapper.selectMenusByPid">
        </collection>
    </resultMap>

    <select id="selectMenusByRoleIds" resultMap="BaseResultMap" parameterType="collection">
        select
        b.id,
        ifnull(b.pid,0) as pid,
        b.title,
        b.access_path,
        b.file_path,
        b.icon,
        b.update_time
        from
        (
        select
        menu_id
        from
        t_role_menu
        where
        role_id in
        <foreach collection="roleIds" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
        group by
        menu_id
        ) a
        join (
        select
        *
        from t_menu
        where ifnull(pid,0) = 0
        ) b on a.menu_id = b.id
    </select>

    <select id="selectMenusByPid" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select id,
               pid,
               title,
               access_path,
               file_path,
               icon,
               update_time
        from t_menu
        where pid = #{id}
    </select>
</mapper>
